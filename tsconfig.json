{
  "compilerOptions": {
    "jsx": "preserve", // This allows JSX syntax
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Ensures TypeScript understands DOM elements
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
